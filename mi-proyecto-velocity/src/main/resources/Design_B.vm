<html>
    <head>
        <style>
            /* Inline styles for email compatibility */
        </style>
    </head>
    <body>
        <h1>Hello, John Doe!</h1>
        <p>We have some recommendations for you:</p>

        <div>
            <h3>Smart Watch</h3>
            <p>Rating: ⭐⭐⭐⭐⭐</p>
            <img src="https://example.com/watch.jpg" alt="Smart Watch">
            <a href="https://example.com/watch">View Product</a>
        </div>

        <h1>Hello, $userName!</h1>
        <p>We have some recommendations for you:</p>

        #foreach( $product in $products )
            <div>
                <h3>$product.name</h3>
                <p>Rating: $product.rating</p>
                <img src="$product.image" alt="$product.name">
                <a href="$product.link">View Product</a>
            </div>
        #end
    </body>
</html>